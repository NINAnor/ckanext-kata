From b60a5d2e84ea9d05555761dfafe16ffbc8386046 Mon Sep 17 00:00:00 2001
From: Mika Wahlroos <mika.wahlroos@csc.fi>
Date: Wed, 5 Nov 2014 16:29:22 +0200
Subject: [PATCH] Add some space between elements in contact forms

---
 ckanext/kata/theme/public/css/kata.css             |    4 ++++
 .../kata/theme/templates/contact/contact_form.html |    2 +-
 .../templates/contact/dataset_request_form.html    |    2 +-
 3 files changed, 6 insertions(+), 2 deletions(-)

diff --git a/ckanext/kata/theme/public/css/kata.css b/ckanext/kata/theme/public/css/kata.css
index 1ff014e..11cf569 100644
--- a/ckanext/kata/theme/public/css/kata.css
+++ b/ckanext/kata/theme/public/css/kata.css
@@ -1103,3 +1103,7 @@ h2.optional span, h3.optional span {
 h3.optional {
     margin-bottom: 6px;
 }
+
+.recipient-selector {
+    margin-bottom: 15px !important;
+}
diff --git a/ckanext/kata/theme/templates/contact/contact_form.html b/ckanext/kata/theme/templates/contact/contact_form.html
index 5a9302b..531154c 100644
--- a/ckanext/kata/theme/templates/contact/contact_form.html
+++ b/ckanext/kata/theme/templates/contact/contact_form.html
@@ -16,7 +16,7 @@
   {#<p>{{ _("On this page you can send a message to the owner of the dataset.") }}</p>#}
 
   <label for="contact-recipient">{{ _("Recipient") }}</label>
-  <select id="contact-recipient" name="recipient">
+  <select class="recipient-selector" id="contact-recipient" name="recipient">
     {% for contact in h.get_contacts_for_package(c.package.id) %}
       <option value="{{ contact.id }}" {% if contact.id == c.recipient_id %}selected{% endif %}>
         {{ contact.name }}
diff --git a/ckanext/kata/theme/templates/contact/dataset_request_form.html b/ckanext/kata/theme/templates/contact/dataset_request_form.html
index acbc0d7..69574e8 100644
--- a/ckanext/kata/theme/templates/contact/dataset_request_form.html
+++ b/ckanext/kata/theme/templates/contact/dataset_request_form.html
@@ -4,7 +4,7 @@
   <form class="dataset-form form-horizontal" method="post" action={{form_post_url}} data-module="basic-form">
   <p>{{ _("On this page you can send a message to the owner of the dataset to request access to the material.") }}</p>
   <label for="request-recipient">{{ _("Recipient") }}</label>
-  <select id="request-recipient" name="recipient">
+  <select class="recipient-selector" id="request-recipient" name="recipient">
     {% for contact in h.get_contacts_for_package(c.package.id) %}
       <option value="{{ contact.id }}" {% if contact.id == c.recipient_id %}selected{% endif %}>
         {{ contact.name }}
